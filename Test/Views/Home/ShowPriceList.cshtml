@using Test.Domain.Entites
@model CreateProductRequest


<div>
    <form method="post" asp-controller="Home">
        <h1><input class="form-control" name="priceListName" value="@Model.priceList.Name" readonly /></h1>
        <input type="hidden" name= "idPriceList" value="@Model.priceList.Id" />
        <button class="addButton" data-toggle="modal" data-target="#Modal">+Добавить позицию</button>
        <table class="table">

            <thread>
                <tr>
                    @foreach (Column column in Model.priceList.Columns)
                    {
                        <th>@column.Name</th>
                    }

                </tr>
            </thread>
            <tbody>
                <tr>
                    @foreach (var product in Model.priceList.Products)
                    {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.articleNumber</td>
                            @foreach (var description in product.descriptions)
                            {
                                if (description.descriptionNumber == null)
                                {
                                <td>@description.descriptionText</td>
                                }
                                else
                                {
                                <td>@description.descriptionNumber</td>
                                }

                            }
                        <td><button class="delete" 
                            data-id="@product.Id"
                            data-priceid="@Model.priceList.Id"
                            data-controller="Home" 
                            data-action="DeleteProduct"
                            data-body-message = "Вы действительно хотите удалить товар?">
                            Удалить</button>
                        </td>
                            
                    </tr>
                    }
                </tr>
            </tbody>
        </table>

        <div id="Modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Добавление товара</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Название:</label>
                            <input type="text" asp-for="product.Name" required class="form-control" />
                            <label>Артикул:</label>
                            <input type="number" asp-for="product.articleNumber" required class="form-control" />
                            @for (int i = 2; i < Model.priceList.Columns.Count; i++)
                            {

                                <label>@Model.priceList.Columns[i].Name</label>
                                @if (Model.priceList.Columns[i].DataType == "Текст")
                                {
                                    <input type="text" asp-for="descriptions[i-2].descriptionText" required class="form-control" />
                                }
                                else
                                {
                                    <input type="number" asp-for="descriptions[i-2].descriptionNumber" required class="form-control" />
                                }

                            }



                            <div class="modal-footer">
                                <button asp-action="AddProduct" type="submit" class="btn btn-primary">Добавить</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

    </form>
</div>

